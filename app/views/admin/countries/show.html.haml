- model_class = Country
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @country.name
%p
  %strong= model_class.human_attribute_name(:flag) + ':'
  %br
  = image_tag @country.flag_url


= link_to t('.back', :default => t("helpers.links.back")), admin_countries_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_country_path(@country), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), admin_country_path(@country), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
