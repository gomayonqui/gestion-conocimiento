- model_class = Solution
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:kind) + ':'
  %br
  = t @solution.kind
%p
  %strong= model_class.human_attribute_name(:content) + ':'
  %br
  = @solution.content
%p
  %strong= model_class.human_attribute_name(:program_id) + ':'
  %br
  = @solution.program.name


= link_to t('.back', :default => t("helpers.links.back")), solutions_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_solution_path(@solution), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), solution_path(@solution), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
